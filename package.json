{
  "name": "@rumenx/feed",
  "version": "1.0.0",
  "description": "A comprehensive TypeScript package for generating RSS and Atom feeds in Node.js applications with full caching support and customizable views",
  "keywords": [
    "rss",
    "atom",
    "feed",
    "npm-package",
    "node-js",
    "feed-generator",
    "typescript",
    "xml",
    "syndication",
    "framework-agnostic"
  ],
  "homepage": "https://github.com/RumenDamyanov/npm-feed#readme",
  "bugs": {
    "url": "https://github.com/RumenDamyanov/npm-feed/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RumenDamyanov/npm-feed.git"
  },
  "license": "MIT",
  "author": {
    "name": "Rumen Damyanov",
    "email": "contact@rumenx.com",
    "url": "https://github.com/RumenDamyanov"
  },
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist/",
    "src/",
    "README.md",
    "LICENSE.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:types && npm run build:esm && npm run build:cjs",
    "build:types": "tsc --project tsconfig.types.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build:cjs": "tsc --project tsconfig.cjs.json && node scripts/fix-cjs-extensions.mjs",
    "clean": "rimraf dist/",
    "dev": "npm run build -- --watch",
    "lint": "eslint src tests --ext .ts --fix",
    "lint:check": "eslint src tests --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" \"*.{js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\" \"*.{js,json,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage-html": "jest --coverage --coverageReporters=html",
    "test:ci": "jest --coverage --coverageReporters=lcov",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint:check && npm run format:check && npm run typecheck && npm run test:ci && npm run build",
    "check": "npm run lint:check && npm run format:check && npm run typecheck && npm run test:coverage",
    "ci": "npm run check && npm run build"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.7.2",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^30.2.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
